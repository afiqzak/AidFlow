<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProjectsFullPage">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="52dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        app:icon="@drawable/back_icon"
        app:iconTint="@color/vibrant_blue" />

    <TextView
        android:id="@+id/projectTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Title" />

    <ImageView
        android:id="@+id/projectImage"
        android:background="@drawable/rounded_lightblue"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp">
    </ImageView>

    <ScrollView
        android:background="@drawable/rounded_blue"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="50dp">

        <TextView
            android:id="@+id/projectFullDesc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Project Description" />
    </ScrollView>



    <LinearLayout
        android:background="@drawable/rounded_blue"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="% to complete"
            android:textStyle="bold"
            android:textColor="@color/vibrant_blue">
        </TextView>

        <ProgressBar
            android:id="@+id/projectProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar_style" />

    </LinearLayout>


</FrameLayout>