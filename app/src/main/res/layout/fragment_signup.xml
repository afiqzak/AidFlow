<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".SignupFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TILPassword"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:endIconDrawable="@drawable/ic_pass"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIETPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_background"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/TVPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETPhone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TVConfirmPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETPhone"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@id/ETFirstName"
        android:fontFamily="@font/poppins"
        android:text="Confirm Password"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TILConfirmPass"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVConfirmPass"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@id/ETFirstName"
        app:endIconDrawable="@drawable/ic_pass"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIETConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:inputType="textPassword"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/ETPhone"
        android:layout_width="304dp"
        android:layout_height="30dp"
        android:layout_below="@+id/TVPhone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:hint="+60123456"
        android:inputType="text"
        android:paddingHorizontal="5dp"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/TVPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETEmail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TVEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETFirstName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ETEmail"
        android:layout_width="304dp"
        android:layout_height="30dp"
        android:layout_below="@+id/TVEmail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:hint="abc@gmail.com"
        android:inputType="text"
        android:paddingHorizontal="5dp"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/TVLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IVProfile"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/ETFirstName"
        android:fontFamily="@font/poppins"
        android:text="Last Name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ETFirstName"
        android:layout_width="146dp"
        android:layout_height="30dp"
        android:layout_below="@+id/TVFirstName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:inputType="text"
        android:paddingHorizontal="5dp"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/IVProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:background="#D9D9D9"
        android:padding="3dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/IVProfile"
        android:layout_alignBottom="@+id/IVProfile"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/vibrant_blue"
        android:src="@drawable/ic_camera"
        app:contentPadding="3dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle" />

    <TextView
        android:id="@+id/IVUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/IVProfile"
        android:fontFamily="@font/poppins"
        android:text="Enter your username"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ETUsername"
        android:layout_width="194dp"
        android:layout_height="30dp"
        android:layout_below="@+id/IVUsername"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/IVProfile"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:hint="Username"
        android:inputType="text"
        android:paddingHorizontal="5dp"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/TVFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IVProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins"
        android:text="First Name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ETLastName"
        android:layout_width="146dp"
        android:layout_height="30dp"
        android:layout_below="@+id/TVFirstName"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@id/ETFirstName"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:inputType="text"
        android:paddingHorizontal="5dp"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/TVPassRequi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TILPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_light"
        android:text="Password must contains:\n  •  more than 4 characters\n  •  at least 1 number and 1 letter\n  •  both uppercase and lowercase"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/BtnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVPassRequi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/button_login"
        android:fontFamily="@font/poppins_medium"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="#5DCCFC" />
</RelativeLayout>