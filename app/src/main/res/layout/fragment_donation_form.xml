<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#B2E8FF"
    tools:context=".DonationFormFragment">

    <ImageButton
        android:id="@+id/IVBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVTitleDonForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/title_box"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center|center_horizontal"
        android:paddingHorizontal="10dp"
        android:text="Funds for Elderly Home"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVTitleDonForm">

        <TextView
            android:id="@+id/TVCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/round_shape"
            android:fontFamily="@font/poppins_semibold"
            android:paddingHorizontal="10dp"
            android:text="Community Project"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVUrgency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/round_shape"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/poppins_semibold"
            android:paddingHorizontal="10dp"
            android:text="Moderate"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/poppins"
            android:text="Donation desc"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVCategory" />

        <ProgressBar
            android:id="@+id/PBMoney"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="309dp"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            android:progress="25"
            app:layout_constraintBottom_toTopOf="@+id/TVMoneyCollected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TVDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="4 Jan"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/PBMoney"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVDesc"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/calander"
            app:layout_constraintBottom_toTopOf="@+id/PBMoney"
            app:layout_constraintEnd_toStartOf="@+id/TVDate"
            app:layout_constraintTop_toBottomOf="@+id/TVDesc"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/TVMoneyCollected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins"
            android:text="This charity has raised RM52012 of RM100000"
            android:textColor="@color/black"
            android:textSize="9sp"
            app:layout_constraintBottom_toTopOf="@+id/TVOrgName"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/profile2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TVOrgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Abu Burn"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/TVAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Amount"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVAmount">

        <Button
            android:id="@+id/BtnRM5"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_amount"
            android:fontFamily="@font/poppins_bold"
            android:text="RM 5"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:backgroundTint="#B2E8FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BtnRM20"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_amount"
            android:fontFamily="@font/poppins_bold"
            android:text="RM 20"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:backgroundTint="#B2E8FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BtnRM50"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_amount"
            android:fontFamily="@font/poppins_bold"
            android:text="RM 50"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:backgroundTint="#B2E8FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BtnRM5" />

        <Button
            android:id="@+id/BtnRM10"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_amount"
            android:fontFamily="@font/poppins_bold"
            android:text="RM 10"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:backgroundTint="#B2E8FF"
            app:layout_constraintEnd_toStartOf="@+id/BtnRM20"
            app:layout_constraintStart_toEndOf="@+id/BtnRM5"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ETAmount"
            android:layout_width="204dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_small"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:gravity="center_vertical"
            android:hint="Enter amount..."
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BtnRM10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/TVPayMehtod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Payment Method"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

<!--    <Spinner-->
<!--        android:id="@+id/SpPayMethod"-->
<!--        android:layout_width="358dp"-->
<!--        android:layout_height="24dp"-->
<!--        android:background="@drawable/dropdown_arrow"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/TVPayMehtod" />-->

    <TextView
        android:id="@+id/SpPayMethod"
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:background="@drawable/dropdown_arrow"
        android:text="Select Payment Method"
        android:padding="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVPayMehtod" />

    <Button
        android:id="@+id/BtnDonate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bottom_nav"
        android:drawableEnd="@drawable/btn_donate"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="DONATE"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:backgroundTint="@color/vibrant_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ETMeaningful"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:gravity="start|top"
        android:hint="Write meaningful thing..."
        android:inputType="textMultiLine"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpPayMethod" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/donate_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ETMeaningful" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETMeaningful" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="183dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/RBYes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_extralight"
            android:text="Yes"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/RBNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_extralight"
            android:text="No"
            android:checked="true"
            android:textSize="14sp" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>

