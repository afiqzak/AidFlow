<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:background="#E1EAF5"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:background="#FFFFFF">

        <!-- Top Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:background="@color/navy_blue"

                >
                 <!-- Donation Name -->
                <TextView
                    android:id="@+id/donationDate_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="7dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="Date Transaction"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

        <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">


            <TextView
                android:id="@+id/donationName_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Donation Name"
                android:textColor="@color/black"
                android:textSize="14sp" />

                <TextView
                    android:id="@+id/projectName_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Project Name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                     <!-- Circle (Urgency) -->
                    <View
                        android:id="@+id/urgencyIndicator"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/person_outline" />

                     <!-- Donator Name -->
                        <TextView
                            android:id="@+id/organizerName_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="7dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="Donator Name"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|right"

                >

                <TextView
                    android:id="@+id/amount_history"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="RM 100"
                    android:textColor="@color/black"
                    android:textSize="27sp"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:textAlignment="viewEnd"/>

                <TextView
                    android:id="@+id/paymentMethod_history"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="via DuitNow"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:paddingRight="10dp"
                    android:gravity="center|right"/>



            </LinearLayout>



            </LinearLayout>

   </LinearLayout>



</androidx.cardview.widget.CardView>