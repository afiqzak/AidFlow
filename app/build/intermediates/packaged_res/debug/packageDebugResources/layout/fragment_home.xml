<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment" >

    <RelativeLayout
        android:id="@+id/PageFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/water_quality_image"
            android:layout_width="wrap_content"
            android:layout_height="217dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true"
            app:srcCompat="@drawable/yucar_studios_cfr_v1quekw_unsplash" />


        <!--        <androidx.fragment.app.FragmentContainerView-->
        <!--            android:id="@+id/fragmentNoti"-->
        <!--            android:name="com.example.practical6.RecycleViewPending"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="100dp"-->
        <!--            android:layout_below="@+id/water_quality_image"-->
        <!--            android:layout_alignParentStart="true"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            tools:layout="@layout/fragment_notifications" />-->

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerNoti"
            android:name="com.example.practical6.NotificationsFragment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/water_quality_image"
            tools:layout="@layout/fragment_notifications" />

        <Button
            android:id="@+id/reportbutton"
            android:layout_width="393dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#B2E8FF"
            android:text="REPORT AN ISSUE"
            android:textColor="@color/black" />

        <!--Toggle Button utk projects -->
        <RadioGroup
            android:id="@+id/toggle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_design_line"
            android:checkedButton="@+id/projects_toggle"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/pending_projects"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="Pending"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/done_projects"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="Done"
                android:textColor="@color/black" />

        </RadioGroup>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="com.example.practical6.RecycleViewPending"
            android:layout_width="wrap_content"
            android:layout_height="241dp"
            android:layout_above="@+id/reportbutton"
            android:layout_below="@+id/toggle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-46dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="0dp"
            tools:layout="@layout/fragment_recycle_view_pending" />


    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="385dp"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/nav_background_curved"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PageFragment"
        app:menu="@menu/menu_bottom" />
</androidx.constraintlayout.widget.ConstraintLayout>